{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "jest --verbose --coverage",
    "test:mock": "jest __tests__/weatherService.mock.test.js --verbose",
    "test:integration": "jest --testPathPatterns=integration --verbose",
    "test:watch": "jest --watch",
    "test:api": "jest __tests__/api.test.js --verbose",
    "test:weather": "jest __tests__/weatherService.test.js --verbose",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "probe": "node scripts/syntheticProbe.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "author": "Javier Prieto",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0",
    "opossum": "^9.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  },
  "keywords": [],
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "verbose": true
  }
}
